<% @posts.each do |post| %>
  <section>

    <h2><a href='/posts/<%= post['id'] %>'><%= post['title'] %></a></h2>

    <article>
      <p class='body'><%= post.body %></p>
    </article>

    <div class='link'><a href='/posts/<%= post['id'] %>/edit/'>Edit</a></div>

    <form action='/posts/<%= post['id'] %>/delete' method='post'>
      <button class='button_delete'>Delete</button>
    </form>

    <footer>
      <p>Author: Unicorn Mushroom </p>
      <p class='created_at'>Created: <%= post['created_at'] %></p>
    </footer>
  </section>
<% end %>
