<%= form_for @recipe do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </p>
  <p>
    <%= f.label :course %>
    <%= f.text_field :course %>
  </p>
  <p>
    <%= f.label :cooktime %>
    <%= f.text_field :cooktime %>
  </p>
  <p>
    <%= f.label :servingsize %>
    <%= f.text_field :servingsize %>
  </p>
  <p>
    <%= f.label :instructions %>
    <%= f.text_field :instructions %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </p>
  <p>
    <% Ingredient.order(:name).each do |ingredient| %>
    <p>
      <!-- use this syntax to pass multiple ingredient ids for selected recipe from the form in an array -->
      <%= check_box_tag 'recipe[ingredient_ids][]', ingredient.id, ingredient.in?(@recipe.ingredients) %>
      <%= ingredient.name %>
    </p>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>