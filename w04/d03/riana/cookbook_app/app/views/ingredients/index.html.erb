<h1>Ingredient Collection</h1>
<div class="book_index">
  <ol>
    <% @ingredients.each do |ingredient| %>
      <li><%= link_to ingredient.name, ingredient_path(ingredient.id) %></li>
      <ul>
        <li><%= ingredient.measurement %></li>
        <li><%= ingredient.cost %></li>
        <li><%= image_tag ingredient.image, :class => 'recipe' %></li>
      </ul>
    <% end %>
  </ol>
</div>