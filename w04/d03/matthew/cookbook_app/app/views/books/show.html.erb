<h2> <%= @book.title %> </h2>

<p> <%= @book.cuisine %> </p>
<p> <%= @book.chef %> </p>

<%= image_tag @book.image %>

<%= link_to 'Edit Book', edit_book_path(@book) %>
<%= button_to 'Delete Book', @book, :method => 'delete' %>

<% @book.recipes.each do |recipe| %>
  <h3> <%=recipe.name%> </h3>
  <%= image_tag recipe.image, :class => 'recipe' %>

  <% recipe.ingredients.each do |ingredient| %>
    <%= ingredient.name %>
    <%= image_tag ingredient.image, :class => 'ingredient' %>
  <%end%>
<%end%>
